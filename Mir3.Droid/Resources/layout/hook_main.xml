<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@android:color/holo_green_light">
	<ImageButton
		android:id="@+id/h_main_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/cancel"
		android:contentDescription="@string/image"
		android:layout_gravity="right"/>
	<com.google.android.material.textview.MaterialTextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/hook_group1"
		android:background="@color/gray"
		android:textSize="10dip"
		android:textColor="@color/white"/>
	<com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="@string/hook_itme1"/>
	<com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="@string/hook_itme2"/>
	<com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
		android:inputType="number"/>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/hook_weather">
		<com.google.android.material.textview.MaterialTextView
			android:minWidth="65dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:text="@string/hook_drop"
			android:id="@+id/hook_weather_txt"
			android:layout_marginLeft="10dip"/>
		<ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
			android:background="@drawable/arrow_down"
			android:contentDescription="@string/image"/>
    </LinearLayout>
</LinearLayout>
