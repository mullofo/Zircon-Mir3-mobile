<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="0dip"  
        android:layout_weight="1"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="550dip"
			android:layout_height="wrap_content"
			android:background="#66808080"
			android:layout_marginBottom="9dip"
			android:orientation="horizontal"
			android:gravity="center_horizontal">
			<ImageButton
				android:id="@+id/newAcount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/login13"
				android:layout_marginBottom="15dip"
				android:layout_marginTop="10dip"
				android:contentDescription="@string/image" />
			<ImageButton
				android:id="@+id/changePwd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/login15"
				android:layout_marginLeft="20dip"
				android:layout_marginBottom="15dip"
				android:layout_marginTop="10dip"
				android:contentDescription="@string/image" />
			<ImageButton
				android:id="@+id/forgetPwd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/login19"
				android:layout_marginLeft="20dip"
				android:layout_marginBottom="15dip"
				android:layout_marginTop="10dip"
				android:contentDescription="@string/image" />
			<ImageButton
				android:id="@+id/exit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/login17"
				android:layout_marginLeft="20dip"
				android:layout_marginBottom="15dip"
				android:layout_marginTop="10dip"
				android:contentDescription="@string/image" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/content"
			android:layout_width="550dip"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="4dip">
			<TextView
				android:layout_margin="5dip"
				android:layout_marginBottom="5dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/white"
				android:text="@string/id" />
			<EditText
				android:id="@+id/acc"
				android:layout_margin="5dip"
				android:layout_marginBottom="5dip"
				android:layout_width="150dip"
				android:layout_height="wrap_content"
				style="@style/edit_main"
				android:inputType="text" />
			<TextView
				android:layout_margin="5dip"
				android:layout_marginBottom="5dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/white"
				android:text="@string/password" />
			<EditText
				android:id="@+id/pwd"
				android:layout_margin="5dip"
				android:layout_marginBottom="5dip"
				android:layout_width="150dip"
				android:layout_height="wrap_content"
				style="@style/edit_main"
				android:inputType="textPassword"
				android:hint="@string/pwd" />
			<ImageButton
				android:id="@+id/login_btn"
				android:layout_marginLeft="5dip"
				android:layout_marginTop="4dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/login11"
				android:contentDescription="@string/image" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>